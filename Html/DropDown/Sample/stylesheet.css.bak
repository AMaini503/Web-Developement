body, html {
	padding: 0px;
	margin: 0px;
	height: 100%;
	background-color: #ccc;
}
.clearfix {
	clear: both;
}
nav ul {
	margin: 0px auto;
	padding: 0px;
	list-style-type: none;
	background-color: black;
}
nav ul li {
	display: inline-block;
	padding: 20px 40px;
	margin: 0px;
	float: left;
	position: relative;
	/* background-color: #ddd; */
}
nav ul li:hover {
	background-color: #ddd;
}
nav ul li:hover > a {
	color: black;
}
nav ul li a {
	text-decoration: none;
	color: white;
	font-family: sans-serif;
	font-size: 15px;
}
nav ul ul {
	min-width: 150px;
	display: none;
	position: absolute;
	left: 0;
	top: 100%;
}
nav ul li:hover > ul {
	display: inherit;
}
nav ul ul li {
	float: none;
	display: block;
}
.sub-menu{
	left: 100%;
}