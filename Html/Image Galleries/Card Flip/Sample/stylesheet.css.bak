.container {
	position: relative;
	perspective: 800px;
	width: 400px;
	height: 260px;
}
#card {
	width: 100%;
	height: 100%;
	aposition: absolute;
	transform-style: preserve-3d;
	transition: 1s;
}
#card div {
	position: absolute;
	width: 100%;
	height: 100%;
	backface-visibility: hidden;
}
#card .front {
	background-color: red;
}
#card .back {
	background-color: blue;
	transform: rotateY( 180deg );
}
#card.flipped {
	transform: rotateY( 180deg );
}