#gallery a {

	text-decoration: none;
}
#gallery .item {
	width: 310px;
	height: 200px;
	float: left;
	border: 5px solid #ddd;
	margin: 5px;
}
#gallery .item a {
	width: 100%;
	height: 100%;
}
#gallery .item a img {
	height: 100%;
	width: 100%;
}
.container:after {
	content: '';
	height: 0;
	width: 0;
	display: block;
	clear: both;
}
.lightbox {
	position: fixed; 
	top: 5%;
	left: 20%;
	right: 20%;
	opacity: 0;
	background: white;
	padding: 10px;
	transition: all 0.8s ease-in-out;
	text-align: center;
	z-index: -1;
}
.lightbox:target {
	opacity: 1;
	z-index: 1;
}
.lightbox .close {
	text-decoration: none;
	color: #333;
	font-size: 22px;
	float: right;
}
.lightbox .title {
	font-family: sans-serif;	
	font-size: 22px;
}
.lightbox img {
	width: 100%;
	height: 100%;
}