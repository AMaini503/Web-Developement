.container {
	position: absolute;;
	left: 30%;
	right: 30%;
	top: 30%;
	bottom: 30%;
	padding: 20px;
	background: red;
}
.container:after {
	content: '';
	background: url('image.jpg');
	opacity: 0.5;
	height: 0;
	width: 0;
	position: absolute;
	z-index: -1;
	display: block;
}
#second {
	border-radius: inherit;
	background: white;
	height: 100%;
}